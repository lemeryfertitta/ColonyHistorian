{
    "name": "Colony Historian",
    "description": "Recorder for Colonist.io games",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_icon": "icon/icon_128.png"
    },
    "content_scripts": [
        {
            "world": "MAIN",
            "js": [
                "src/historian.js"
            ],
            "matches": [
                "https://colonist.io/*"
            ],
            "run_at": "document_start"
        }
    ],
    "permissions": [
        "activeTab",
        "scripting"
    ]
}